<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


</head>


	<body>

	<header class="header">
	Rainforest Marketplace
	</header>

		<% if flash[:notice] %>
			<p id="notice"><%= flash[:notice] %></p>
		<% end %>
		<% if flash[:alert] %>
			<p id="alert"><%= flash[:alert] %></p>
		<% end %>
	
		<div class="localheader"><%= @pagetitle %></div>

		<div class="sidebar">
			<p class="directory">
				<% if current_user %>
					Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
				<% else %>
					<%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
				<% end %>
			</p>
				<p class="directory"><a href="/products">All Products</a></p>
				<p class="directory"><a href="/products/new">New Product</a></p>
				<p class="directory">Placeholder</p>
				<p class="directory">Placeholder</p>
		</div>

		<%= yield %>
		
	

	
	</body>
</html>
